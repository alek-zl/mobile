<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.Registration">

    <Button
        android:id="@+id/buttonReturnReg"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_12sdp"

        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/back"
        android:backgroundTint="@color/blue_dark"
        android:fallbackLineSpacing="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/_40sdp"
            android:text="Познакомимся?"
            android:textIsSelectable="false"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/_40sdp"
            android:text="Как мы можем к вам обращаться?"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:ems="10"
            android:hint="Имя"
            android:inputType="text"
            android:backgroundTint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/edDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:ems="10"
            android:hint="дата"
            android:inputType="date" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_39sdp"
            android:layout_marginTop="@dimen/_30sdp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="#ff000000"
            android:backgroundTintMode="src_in"
            />

        <Button
            android:id="@+id/buttonContinueReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:backgroundTint="@color/blue_dark"
            android:text="Завершить регистрацию"
            app:cornerRadius="@dimen/_15sdp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>